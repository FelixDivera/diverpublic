{
  "host": "staging247.de",
  "basePath": "/api/v2",
  "schemes": [
    "https"
  ],
  "securityDefinitions": {
    "System-Benutzer Accesskey": {
      "type": "apiKey",
      "in": "query",
      "name": "accesskey"
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "tags": [ "Einloggen+Nutzerdaten" ],
        "summary": "Authentifizieren für Nutzerdaten",
        "consumes": [ "application/json" ],
        "responses": {
          "200": {
            "description": "successful"
          },
          "403": {
            "description": "Accesskey fehlt oder falsch!"
          }
        },
        "parameters": [
          {
            "name": "jwt",
            "in": "query",
            "description": "JWT abfragen",
            "required": true,
            "type": "boolean"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Mit Nutzername und Passwort einloggen, um z.B. die ucr abzufragen.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Login": {
                  "type": "object",
                  "properties": {
                    "username": {
                      "type": "string",
                      "example": "Loginname"
                    },
                    "password": {
                      "type": "string",
                      "example": "Passwort"
                    }
                  }
                }
              }
            }
          }
        ]
      }
    }
  }
}